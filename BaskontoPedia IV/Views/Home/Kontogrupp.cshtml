@model BaskontoPedia_IV.Controllers.AccountGroupViewModel

@{
    ViewBag.Title = "Kontogrupp";
}

<h2>Kontogrupp @Model.Group</h2>


<table class="table">
    <tr>
        <th>Kontonr</th>
        <th>Kontonamn</th>
        <th>Huvudkontot används av</th>
        <th>Underkonton används av</th>
        <th>Företag med mer än ett underkonto</th>
   </tr>

    @foreach (var item in Model.Group.SubAccounts)
    {
    <tr>
        <td>
            @Html.ActionLink(item.Number, "Huvudkonto/" + item.AccountId, "Home")

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>1%</td>
        <td>1%</td>
        <td>1%</td>
    </tr>
    }

</table>
